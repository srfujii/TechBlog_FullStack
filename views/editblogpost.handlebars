<div class="container container-fluid mt-5">

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Edit Blog Post:</h3>

    <form class="form edit-blogpost-form">
      <div class="form-group">
        <input type="hidden" id="blogpost-id" name="blogpost-id" value="{{id}}" />
        <label for="blogpost-title">Title:</label>
        <input class="form-input" type="text" id="blogpost-title" name="blogpost-title" value="{{blog_title}}" />
      </div>

      <div class="form-group">
        <label for="blogpost-content">Content:</label>
        <textarea class="form-input" type="text" id="blogpost-content" name="blogpost-content">{{blog_content}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" id="update-post" class="btn btn-primary">Update Blog Post</button>
        
        {{!-- <button type="submit" id="update-post" class="btn btn-primary">Update</button> --}}
        <button type="submit" id="delete-post" class="btn btn-primary">Delete Blog Post</button>
      </div>
    </form>
  </div>
</div>

</div>  

  <script src="/js/editblogpost.js"></script>