<div class="container container-fluid mt-5">
  <h2>{{blog_title}}</h2>
  <h2></h2>
  <p>Authored by: {{author.name}} on {{format_date date_created}}</p>
  <p>{{blog_content}}</p>

  <h2>Comments:</h2>
  {{#each comments as |comment| }}
  <p>{{comment.comment_content}}</p>
  <p>Comment by: {{comment.author_id}} on {{format_date comment.date_created}}</p>
  {{/each}}

  <h3>Add New Comment:</h3>
  <form class="form new-comment-form">
      <div class="form-group">
        <input type="hidden" id="blogpost-id" name="blogpost-id" value="{{id}}" />
        <label for="comment-content">Comment:</label>
        <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit Comment</button>
      </div>
    </form>
</div>

<script src="/js/createcomment.js"></script>